@model Categoria


<div class="container p-3">
    <form class="form" method="post" asp-action="Create">
        <div class="border p-3 mt-4">
            <div class="row pb-2 mb-3">
                <h2 class="text-primary pb-2 border-bottom border-dark">Crear Categoría</h2>
            </div>
            <div class="mb-3">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Crear</button>
            <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-left"></i> Regresar a la lista</a>
        </div>
    </form>

    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
    </div>
