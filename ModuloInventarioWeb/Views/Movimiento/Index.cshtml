@model IEnumerable<Movimiento>

@{
    ViewData["Title"] = "Movimientos";
}

<div class="container p-3">
    <div class="row pt-4 mb-5">
        <div class="col-6">
            <h2 class="text-primary">Movimientos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movimiento" asp-action="Crear" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tipo de Movimiento</th>
                <th>Fecha de Creacion</th>
                <th>Descripcion</th>
                <th>Por</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    @if (obj.TipoMovimiento)
                    {
                        <td style="width=50%">Entrada</td>
                    }
                    else
                    {
                        <td style="width=50%">Salida</td>
                    }
                    <td style="width=30%">@obj.FechaCreacion</td>
                    <td style="width=30%">@obj.Descripcion</td>
                    <td style="width=30%">@obj.Usuario.Nombre</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" asp-action="Ver" asp-route-id="@obj.Id"><i class="bi bi-eye"></i></a>
                            <a class="btn btn-success" asp-action="Editar" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-warning" asp-action="Borrar" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
