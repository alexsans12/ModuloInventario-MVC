@model Category

<div class="container p-3">
    <form class="form" method="post" asp-action="Create">
        <div class="border p-3 mt-4">
            <div class="row pb-2 mb-3">
                <h2 class="text-primary pb-2 border-bottom border-dark">Create Category</h2>
            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Create</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-left"></i> Back to List</a>
        </div>
    </form>

    @section Scripts {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</div>