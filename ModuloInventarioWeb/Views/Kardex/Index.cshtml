@model IEnumerable<Kardex>

@{
    ViewData["Title"] = "Kardex";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container p-3">
    <div class="row pt-4 mb-5">
        <div class="col-6">
            <h2 class="text-primary">Kardex</h2>
        </div>
        <div class="col-6 text-end">
            <div class="btn-group" role="group" aria-label="Basic example">
                <a asp-controller="Kardex" asp-action="Index" asp-route-id="0" class="btn btn-outline-primary"><i class="bi bi-box-arrow-in-right"></i> Entradas</a>
                <a asp-controller="Kardex" asp-action="Index" asp-route-id="1" class="btn btn-outline-primary"><i class="bi bi-box-arrow-left"></i> Salidas</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Fecha de Ingreso</th>
                    <th>Motivo</th>
                    <th>Por</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.FechaCreacion</td>
                        <td>@obj.Motivo</td>
                        <td>@obj.Usuario.Nombre</td>
                        <td>@obj.Motivo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @if (pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Requerimiento" asp-action="Index" asp-route-pg="1"><i class="bi bi-chevron-double-left"></i></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Requerimiento" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)"><i class="bi bi-chevron-left"></i></a>
                    </li>
                }
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Requerimiento" asp-action="Index" asp-route-pg="@pge">@pge</a>
                    </li>
                }
                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Requerimiento" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)"><i class="bi bi-chevron-right"></i></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Requerimiento" asp-action="Index" asp-route-pg="@(pager.TotalPages)"><i class="bi bi-chevron-double-right"></i></a>
                    </li>
                }
            </ul>
        }
    </div>
</div>

